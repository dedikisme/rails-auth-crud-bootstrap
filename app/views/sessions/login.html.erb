<% @page_title = "UserAuth | Login" -%>
<div class= "Sign_Form">
  <h1>Log in</h1>
  <%= form_tag(:action => 'login_attempt') do %>
    <p>Username or Email:</br> <%= text_field_tag :username_or_email, nil, :class=> 'form-control' %></p> 
    <p>Password:</br> <%= password_field_tag :login_password, nil, :class => 'form-control' %></p> 
    <%= submit_tag "Log In", :class => 'btn btn-primary' %>
  <% end %>
</div>